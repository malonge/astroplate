---
interface Props {
  name: string;
  label: string;
  email: string;
  phone: string;
  location: { city: string; region: string };
  url: string;
  profiles?: Array<{ network: string; url: string }>;
}

const { name, label, email, phone, location, url, profiles } = Astro.props;
---

<div class="cv-print-header">
  <h1>{name}</h1>
  <div class="subtitle">{label}</div>
  <div class="contact-info">
    <div>
      <i class="fas fa-envelope"></i> {email} • 
      <i class="fas fa-phone"></i> {phone} • 
      <i class="fas fa-map-marker-alt"></i> {location.city}, {location.region}
    </div>
    <div>
      <i class="fas fa-globe"></i> <a href={url}>{url}</a>
    </div>
    {profiles && (
      <div>
        {profiles.map((profile, index) => (
          <>
            <i class={`fab fa-${profile.network.toLowerCase()}`}></i> 
            <a href={profile.url}>{profile.network}</a>
            {index < profiles.length - 1 ? ' • ' : ''}
          </>
        ))}
      </div>
    )}
  </div>
</div>
